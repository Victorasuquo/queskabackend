# ============================================
# QUESKA BACKEND - Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# Command: cp env.example .env
# ============================================

# === Application Settings ===
APP_NAME=Queska
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# === Server Settings ===
HOST=0.0.0.0
PORT=8000
WORKERS=4

# === Security Settings ===
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24
VERIFICATION_TOKEN_EXPIRE_HOURS=48

# === CORS Settings ===
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","https://queska.com"]

# === MongoDB Settings ===
# Local: mongodb://localhost:27017
# Atlas: mongodb+srv://username:password@cluster.mongodb.net
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=queska

# === Redis Settings ===
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# === Celery Settings ===
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# === Stripe Payment Settings ===
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=ngn

# === Mapbox Settings ===
# Get from: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token

# === Google Maps (Optional Fallback) ===
GOOGLE_MAPS_API_KEY=

# === Travel API Settings ===
# Booking.com Affiliate API
BOOKING_COM_API_KEY=
BOOKING_COM_API_SECRET=

# Expedia API
EXPEDIA_API_KEY=
EXPEDIA_API_SECRET=

# Amadeus API (https://developers.amadeus.com/)
AMADEUS_API_KEY=
AMADEUS_API_SECRET=

# === AI Settings ===
AI_PROVIDER=gemini  # gemini, openai, perplexity

# Google Gemini (https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=

# Perplexity (https://www.perplexity.ai/)
PERPLEXITY_API_KEY=

AI_MODEL_NAME=gemini-pro
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# === Search Engine Settings ===
SEARCH_ENGINE=meilisearch  # meilisearch, elasticsearch

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Meilisearch (https://www.meilisearch.com/)
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_API_KEY=

# === Vector Database Settings ===
VECTOR_DB=qdrant  # qdrant, chromadb, weaviate

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ChromaDB
CHROMADB_PATH=./data/chromadb

# Weaviate
WEAVIATE_URL=http://localhost:8080

# === Media Storage Settings ===
MEDIA_STORAGE=cloudinary  # cloudinary, minio, s3

# Cloudinary (https://cloudinary.com/console)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# MinIO (Self-hosted S3-compatible)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=queska-media
MINIO_SECURE=false

# AWS S3
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# === Email Settings ===
EMAIL_PROVIDER=sendgrid  # sendgrid, mailgun, smtp

# SendGrid (https://app.sendgrid.com/)
SENDGRID_API_KEY=

# Mailgun
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# SMTP (Gmail, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true

EMAIL_FROM_NAME=Queska
EMAIL_FROM_ADDRESS=noreply@queska.com

# === SMS Settings ===
SMS_PROVIDER=twilio  # twilio, termii

# Twilio (https://www.twilio.com/console)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Termii (https://termii.com/)
TERMII_API_KEY=

# === Push Notification Settings ===
# Firebase Cloud Messaging
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# === Weather API Settings ===
# OpenWeather (https://openweathermap.org/api)
OPENWEATHER_API_KEY=

# === Transportation API Settings ===
UBER_CLIENT_ID=
UBER_CLIENT_SECRET=
BOLT_API_KEY=

# === Rate Limiting ===
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# === Logging ===
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text

# Sentry Error Tracking (https://sentry.io/)
SENTRY_DSN=

# === Feature Flags ===
ENABLE_AI_AGENTS=true
ENABLE_WEB_CRAWLER=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_PUSH_NOTIFICATIONS=true
SHOW_DOCS=true

# === Allowed Hosts (Production) ===
ALLOWED_HOSTS=["*"]

